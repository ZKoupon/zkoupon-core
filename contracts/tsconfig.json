{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": ["./src", "./test", "./scripts", "./typechain"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./dist", "node_modules"],
  "include": ["./src", "./typechain", "./test", "./scripts"],
  "files": ["./hardhat.config.ts"]
}
